PORT=3000
# Option 1 (recommended): full connection string
DATABASE_URL=postgresql://user:password@host/dbname?sslmode=require
# Alternative key used by some platforms (Vercel/Neon integrations)
# POSTGRES_URL=postgresql://user:password@host/dbname?sslmode=require
# Option 2: separate fields (DB_HOST/DB_PORT) or PGHOST/PGPORT aliases
# DB_HOST=localhost
# DB_PORT=5432
# DB_USER=postgres
# DB_PASSWORD=
# DB_NAME=delosmc
DB_SSL=true
DB_ENABLE_CHANNEL_BINDING=true
APP_BASE_URL=https://delosmc.store
EMAIL_VERIFY_TTL_MINUTES=60
# SMTP email delivery (required on Vercel to send real emails)
SMTP_HOST=
SMTP_PORT=465
SMTP_SECURE=true
SMTP_USER=
SMTP_PASS=
# Optional: if empty, SMTP_USER is used as sender
SMTP_FROM=DelosMC <no-reply@delosmc.store>
